{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "es2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "otherModules/*": [
        "./src/app/other-modules/*"
      ],
      "@bpCommonInterfaces/*": [
        "app/shared/interfaces/*"
      ],
      "@bpCommonClasses/*": [
        "app/shared/commonClasses/*"
      ],
      "@bpShared/*": [
        "app/shared/*"
      ],
      "@bpSharedServices/*": [
        "app/shared/shared-services/*"
      ]
    },
  }
}